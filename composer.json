{
    "name": "amarafiif/filament-lost-connection",
    "description": "A Laravel Filament plugin that displays network connection status indicator",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "filament",
        "network",
        "connection",
        "indicator",
        "plugin"
    ],
    "authors": [
        {
            "name": "Muhammad Ammar Afif",
            "email": "amarafif230@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/view": "^10.0|^11.0",
        "filament/filament": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Amarafiif\\FilamentLostConnection\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Amarafiif\\FilamentLostConnection\\FilamentLostConnectionServiceProvider"
            ]
        }
    },
    "scripts": {
        "format": "vendor/bin/pint",
        "format-dry": "vendor/bin/pint --test",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "laravel/pint": "^1.24",
        "phpstan/phpstan": "^1.10"
    }
}
